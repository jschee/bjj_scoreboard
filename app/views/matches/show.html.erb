<%= turbo_stream_from @match %>



<div class="min-h-screen text-8xl">
  <section class='flex flex-col max-h-full'>
    <div class="flex-1 max-h-screen">
    <article class="bg-blue-600 w-full" id="<%= dom_id(@match.competitors.first) %>">
      <div class="flex items-baseline w-full min-h-full">
        <%= render 'competitor_one' %>
        <%= render 'competitor_two_score' %>
      </div>
    </article>
    <article class="bg-gray-500 w-full border-t-2" id=>
      <div class="flex items-baseline w-full min-h-full">
        <%= render 'competitor_two' %>
        <%= render 'competitor_two_score' %>
      </div>
    </article>
    <article class="bg-black w-full h-1/3" style="height: 33.3vh">
      <div class="flex items-baseline justify-center w-full min-h-full pr-10 py-14">
        <div class="text-white text-9xl relative">
          10:00
          <div class="absolute -top-full">
            <button class="bg-white hover:bg-gray-200 py-2 px-4 rounded text-black text-lg">-1</button>
            <button class="bg-white hover:bg-gray-200 py-2 px-4 rounded text-black text-lg">+1</button>
          </div>
          <div class="absolute -right-3/4 -top-10">
            <button class="bg-white hover:bg-gray-200 py-2 px-4 rounded text-black text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-play-fill" viewBox="0 0 16 16">
                <path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z"/>
              </svg>
            </button>
            <button class="bg-white hover:bg-gray-200 py-2 px-4 rounded text-black text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pause-fill" viewBox="0 0 16 16">
                <path d="M5.5 3.5A1.5 1.5 0 0 1 7 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5zm5 0A1.5 1.5 0 0 1 12 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5z"/>
              </svg>
            </button>
            <button class="bg-white hover:bg-gray-200 py-2 px-4 rounded text-black text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-counterclockwise" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 0 0-.908-.417A6 6 0 1 0 8 2v1z"/>
                <path d="M8 4.466V.534a.25.25 0 0 0-.41-.192L5.23 2.308a.25.25 0 0 0 0 .384l2.36 1.966A.25.25 0 0 0 8 4.466z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </article>
    </div>
  </section>
</div>
